@{
    ViewData["Title"] = "Create User";
}

@model Person

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Create New User</h2>
        <p class="lead text-secondary">Please provide the user information below</p>
    </div>

    <form method="post" asp-controller="User" asp-action="Create" class="needs-validation" novalidate>
        <div class="row g-4">
            <div class="col-md-6">
                <label class="form-label" asp-for="Firstname">First Name</label>
                <input class="form-control" asp-for="Firstname" type="text" required />
                <span class="text-danger" asp-validation-for="Firstname"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label" asp-for="Lastname">Last Name</label>
                <input class="form-control" asp-for="Lastname" type="text" required />
                <span class="text-danger" asp-validation-for="Lastname"></span>
            </div>

            <div class="col-md-12">
                <label class="form-label" asp-for="Email">Email</label>
                <input class="form-control" asp-for="Email" type="email" placeholder="my@email.com" required />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label" asp-for="User.Username">Username</label>
                <div class="input-group">
                    <span class="input-group-text">@@</span>
                    <input class="form-control" asp-for="User.Username" type="text" required />
                </div>
                <span class="text-danger" asp-validation-for="User.Username"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label" asp-for="User.Password">Password</label>
                <input class="form-control" asp-for="User.Password" type="password" required />
                <span class="text-danger" asp-validation-for="User.Password"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label" asp-for="User.Role">Role</label>
                <select class="form-select" asp-for="User.Role" required>
                    <option value="">-- Select Role --</option>
                    <option value="Manager">Manager</option>
                    <option value="Staff">Staff</option>
                    <option value="Cook">Cook</option>
                </select>
                <span class="text-danger" asp-validation-for="User.Role"></span>
            </div>

            <div class="col-12 text-center mt-4">
                <button class="btn btn-success px-5 py-2" type="submit">Create</button>
            </div>
        </div>
    </form>
</div>
