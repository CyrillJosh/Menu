@model Menu.Models.Dish

@{
    ViewData["Title"] = "Delete Dish";
}

<div class="container mt-5" style="max-width:600px;">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete Dish</h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this dish?</h4>

            <h5>@Model.Name</h5>
            <p>@Model.Description</p>
            <p><strong>Price:</strong> $@Model.Price.ToString("F2")</p>

            @if (Model.ImageData != null)
            {
                var base64 = Convert.ToBase64String(Model.ImageData);
                var imgSrc = $"data:{Model.ImageMimeType};base64,{base64}";
                <img src="@imgSrc" alt="Dish Image" class="img-thumbnail mb-3" style="max-height:200px;" />
            }

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="DishId" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
